package main

import (
	{{imports}}
	"net/http"
)

func main() {
	{{init_behaviour}}
	fs := http.FileServer(http.Dir("{{directory}}"))
	http.HandleFunc("/", func(w http.ResponseWriter, r *http.Request) {
		if r.URL.Path != "/" {
			r.URL.Path += ".html"
		}
		fs.ServeHTTP(w, r)
	})

	if err := http.ListenAndServe(":{{port}}", nil); err != nil {
		{{fail_behaviour}}
	}
}
